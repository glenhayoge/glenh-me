{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "nodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    // ðŸ”§ Required by Contentlayer
    "baseUrl": ".",
    "paths": {
      "contentlayer/generated": [".contentlayer/generated"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",

    // ðŸ”§ Ensure Contentlayer's generated types are included
    ".contentlayer/generated"
  ],
  "exclude": ["node_modules"]
}
